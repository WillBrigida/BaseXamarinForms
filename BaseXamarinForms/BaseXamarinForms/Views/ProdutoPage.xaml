<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BaseXamarinForms.Views.ProdutoPage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="Produto">
    <ContentPage.Content >
        <StackLayout BindingContext="{Binding Produto}">
            <Label Text="{Binding Produto.NomeProduto}" FontSize="Large"/>
            <Label Text="{Binding Produto.IdProduto}" FontSize="Large"/>
            <Label Text="{Binding Produto.QuantidadeDeItens}" FontSize="Large"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>